{
	"compilerOptions": {
		"module": "commonjs",
		"lib": ["ESNext"],
		"esModuleInterop": true,
		"target": "es6",
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["src/**/*"]
}
